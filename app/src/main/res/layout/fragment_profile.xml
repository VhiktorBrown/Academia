<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".modules.main.profile.fragments.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Profile"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/textColor2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_16ssp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:src="@drawable/academia_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_marginTop="@dimen/_20sdp"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chukwunomso Emmanuel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_image"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/textColor2"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/level_reg_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="400 LEVEL  2018514019"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/textColor2"
            app:layout_constraintTop_toBottomOf="@+id/profile_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/student_details_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/level_reg_number"
            android:background="@drawable/student_details_background"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Student details"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_14ssp"
            android:textAlignment="gravity"
            android:gravity="center" />

        <TextView
            android:id="@+id/department_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/student_details_text"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:textColor="@color/textColor2"
            android:fontFamily="@font/poppins_semi_bold"
            android:drawablePadding="@dimen/_10sdp"
            android:textSize="@dimen/_14ssp"
            app:drawableStartCompat="@drawable/ic_level"
            app:drawableTint="@color/textColor2" />

        <TextView
            android:id="@+id/department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer Science"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/department_text"
            app:layout_constraintBottom_toBottomOf="@+id/department_text"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/textColor2"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/gender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/department_text"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:textColor="@color/textColor2"
            android:fontFamily="@font/poppins_semi_bold"
            android:drawablePadding="@dimen/_10sdp"
            android:textSize="@dimen/_14ssp"
            app:drawableStartCompat="@drawable/ic_person"
            app:drawableTint="@color/textColor2" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gender_text"
            app:layout_constraintBottom_toBottomOf="@+id/gender_text"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/textColor2"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/date_of_birth_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Of Birth"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gender_text"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:textColor="@color/textColor2"
            android:fontFamily="@font/poppins_semi_bold"
            android:drawablePadding="@dimen/_10sdp"
            android:textSize="@dimen/_14ssp"
            app:drawableStartCompat="@drawable/ic_date_of_birth"
            app:drawableTint="@color/textColor2" />

        <TextView
            android:id="@+id/date_of_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31-08-1998"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/date_of_birth_text"
            app:layout_constraintBottom_toBottomOf="@+id/date_of_birth_text"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/textColor2"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/phone_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_of_birth_text"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:textColor="@color/textColor2"
            android:fontFamily="@font/poppins_semi_bold"
            android:drawablePadding="@dimen/_10sdp"
            android:textSize="@dimen/_14ssp"
            app:drawableStartCompat="@drawable/ic_phone"
            app:drawableTint="@color/textColor2" />

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08145789765"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/phone_number_text"
            app:layout_constraintBottom_toBottomOf="@+id/phone_number_text"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/textColor2"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/hostel_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hostel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/hostel"
            app:layout_constraintTop_toBottomOf="@+id/phone_number_text"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:textColor="@color/textColor2"
            android:fontFamily="@font/poppins_semi_bold"
            android:drawablePadding="@dimen/_10sdp"
            android:textSize="@dimen/_14ssp"
            app:drawableStartCompat="@drawable/ic_level"
            app:drawableTint="@color/textColor2" />

        <TextView
            android:id="@+id/hostel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Saint Theresa Hostel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hostel_text"
            app:layout_constraintTop_toTopOf="@+id/hostel_text"
            app:layout_constraintBottom_toBottomOf="@+id/hostel_text"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/textColor2"
            android:fontFamily="@font/poppins_semi_bold"
            android:textAlignment="gravity"
            android:gravity="end"
            android:textSize="@dimen/_14ssp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>