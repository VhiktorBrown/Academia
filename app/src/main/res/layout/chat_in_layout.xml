<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_5sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/inbox_image"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/inbox_in_message"
            app:layout_constraintEnd_toStartOf="@+id/inbox_in_message"
            android:src="@drawable/academia_profile"
            android:layout_marginEnd="@dimen/_10sdp" />

        <TextView
            android:id="@+id/inbox_in_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/_220sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/inbox_image"
            android:background="@drawable/chat_in"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:text="I am just typing random shii because I dont know what else to type"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:lineSpacingExtra="@dimen/_5sdp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/inbox_in_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/inbox_in_message"
            app:layout_constraintTop_toBottomOf="@+id/inbox_in_message"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="23 Mar 2022, 08:41"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/textColor2"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>