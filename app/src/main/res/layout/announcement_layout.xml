<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/root_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:backgroundTint="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/announcer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="By Kyrian Kosisochukwu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textAlignment="gravity"
                android:gravity="start"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_semi_bold"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/backgroundLight"
                android:layout_marginStart="@dimen/_10sdp" />

            <TextView
                android:id="@+id/announcement_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="General Meeting of all CSC students"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/announcer"
                android:textAlignment="gravity"
                android:gravity="start"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_semi_bold"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/textColor"
                android:layout_marginStart="@dimen/_10sdp" />


            <TextView
                android:id="@+id/announcement_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="There will be a general meeting of all CSC students at all level on Monday 24th of March at the new Faculty building - Final year classroom."
                app:layout_constraintStart_toStartOf="@+id/announcer"
                app:layout_constraintTop_toBottomOf="@+id/announcement_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/textColor2" />

            <TextView
                android:id="@+id/announcement_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02 May"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/textColor2"
                android:layout_marginStart="@dimen/_10sdp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>